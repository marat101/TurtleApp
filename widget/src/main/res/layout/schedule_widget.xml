<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <TextView
            android:id="@+id/widgetDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/qanelas"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"
            tools:text="вторник 21 сентября"/>
        <TextView
            android:id="@+id/widgetDayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="7dp"
            android:lines="1"
            android:singleLine="true"
            tools:text="1/5"/>
    </FrameLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_one_pair_widget"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_previous"
            android:foreground="@drawable/widget_btn_selector"  />
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_next"
            android:foreground="@drawable/widget_btn_selector" />
        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_refresh"
            android:foreground="@drawable/widget_btn_selector" />
        <TextView
            android:id="@+id/widgetCurrentGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            tools:text="@string/error_target_value_is_default"
            android:layout_weight="3"
            android:gravity="center"
            android:foreground="@drawable/widget_btn_selector" />
    </LinearLayout>

</LinearLayout>